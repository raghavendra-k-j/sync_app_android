<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:textAllCaps="true"
        android:id="@+id/list_item_transaction_text_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/onSurface"
        android:text="Action: Perform Transaction" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/list_item_transaction_text_performed_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performed On: 2023-07-01" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/list_item_transaction_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync Status: Success" />

    </LinearLayout>


    <TextView
        android:textColor="#FF9100"
        android:id="@+id/list_item_transaction_text_failed_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Failed Reason: -" />

    <com.google.android.material.divider.MaterialDivider
        app:dividerColor="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height=".5dp"/>

</LinearLayout>
